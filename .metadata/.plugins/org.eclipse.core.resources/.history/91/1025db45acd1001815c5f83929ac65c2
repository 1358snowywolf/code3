#include <bits/stdc++.h>

using namespace std;
int N, P, K, minimum;

int main() {
	cin >> N >> P >> K;
	map<int, vector<pair<int, int>>> graph;
	vector<pair<int, int>> neighbors;

	for(int i = 0; i < N; i++){
		graph.insert({i, neighbors});
	}

	for(int i = 0; i < P; i++){
		int A, B, L;
		cin >> A >> B >> L;

		graph[A].push_back(make_pair(B, L));
	}



	return 0;
}
